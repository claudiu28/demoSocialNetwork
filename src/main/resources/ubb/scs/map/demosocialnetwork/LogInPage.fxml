<AnchorPane prefHeight="441.0" prefWidth="879.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ubb.scs.map.demosocialnetwork.controller.LoginPage">
   <ImageView fitHeight="392.0" fitWidth="417.0" layoutX="34.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../../assets/imag3.jpg"/>
   </ImageView>
   <Text fill="#349ee0" layoutX="633.0" layoutY="48.0" strokeType="OUTSIDE" strokeWidth="0.0" text="LogIn"
         textAlignment="CENTER">
      <font>
         <Font name="Georgia Pro" size="25.0"/>
      </font>
   </Text>
   <TextField fx:id="username" layoutX="467.0" layoutY="169.0" prefHeight="25.0" prefWidth="373.0" promptText="Enter your username"/>
   <TextField fx:id="email" layoutX="467.0" layoutY="232.0" prefHeight="25.0" prefWidth="373.0" promptText="Enter your email"/>
   <ButtonBar prefHeight="40.0" prefWidth="200.0"/>
   <ButtonBar layoutX="447.0" layoutY="358.0" prefHeight="40.0" prefWidth="392.0">
      <buttons>
         <Button fx:id="SignUpButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="193.0" text="SignUp"
