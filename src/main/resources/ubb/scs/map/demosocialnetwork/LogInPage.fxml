         <Button fx:id="toWelcome" onAction="#goToWelcome" mnemonicParsing="false" prefHeight="23.0" text="Go Back" textAlignment="CENTER"/>
         <Button  fx:id="LoginButton" onAction="#loginUser" mnemonicParsing="false" prefHeight="25.0" prefWidth="86.0"
                 text="LogIn" textAlignment="CENTER"/>
      </buttons>
   </ButtonBar>
   <Text layoutX="472.0" layoutY="164.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
      <font>
         <Font size="15.0"/>
      </font>
   </Text>
   <Text layoutX="472.0" layoutY="227.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email">
      <font>
         <Font size="15.0"/>
      </font>
   </Text>
   <Text layoutX="474.0" layoutY="292.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password" textAlignment="CENTER">
      <font>
         <Font size="15.0"/>
      </font>
   </Text>
   <PasswordField fx:id="password" layoutX="467.0" layoutY="297.0" prefHeight="25.0" prefWidth="373.0" promptText="Enter your password"/>
   <Text fill="#1a9055" layoutX="488.0" layoutY="106.0" strokeType="OUTSIDE" strokeWidth="0.0"
         text="Please LOGIN in our app!! Complete all fields!" textAlignment="CENTER">
      <font>
         <Font name="Georgia Pro Italic" size="16.0"/>
      </font>
   </Text>
</AnchorPane>
